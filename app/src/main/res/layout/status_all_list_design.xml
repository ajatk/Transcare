<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="16sp"
    android:background="#ddd"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/topViewLine_onScooter"
        android:layout_width="2sp"
        android:layout_height="30sp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_images"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:background="@drawable/circular_sahpe_icon"
        android:src="@drawable/on_way_scooter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topViewLine_onScooter" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="90sp"
        android:layout_height="2sp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/status_images"
        app:layout_constraintStart_toEndOf="@+id/status_images"
        app:layout_constraintTop_toTopOf="@+id/status_images" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="collecter on the way"
        app:layout_constraintBottom_toBottomOf="@+id/imageFor_shape"
        app:layout_constraintStart_toEndOf="@+id/textView47"
        app:layout_constraintTop_toTopOf="@+id/imageFor_shape" />

    <ImageView
        android:id="@+id/imageFor_shape"
        android:layout_width="102dp"
        android:layout_height="55sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView47"
        app:layout_constraintStart_toEndOf="@+id/textView47"
        app:layout_constraintTop_toTopOf="@+id/textView47"
        app:srcCompat="@drawable/callbook" />

</android.support.constraint.ConstraintLayout>